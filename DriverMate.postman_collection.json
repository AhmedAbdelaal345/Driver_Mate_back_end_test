{
    "info": {
      "name": "Driver Mate Auth API",
      "_postman_id": "drivermate-auth-collection-456",
      "description": "Complete Driver Mate Auth API with FormData, JWT, OTP, Password Management",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Home / API Info",
        "request": {
          "method": "GET",
          "header": [],
          "url": {
            "raw": "{{base_url}}/",
            "host": ["{{base_url}}"],
            "path": [""]
          }
        },
        "response": []
      },
      {
        "name": "Register",
        "request": {
          "method": "POST",
          "header": [],
          "body": {
            "mode": "formdata",
            "formdata": [
              { "key": "name", "value": "Ahmed Ali", "type": "text" },
              { "key": "email", "value": "ahmed@gmail.com", "type": "text" },
              { "key": "password", "value": "123456", "type": "text" },
              { "key": "isAgreed", "value": "true", "type": "text" }
            ]
          },
          "url": {
            "raw": "{{base_url}}/register",
            "host": ["{{base_url}}"],
            "path": ["register"]
          }
        },
        "response": []
      },
      {
        "name": "Login",
        "request": {
          "method": "POST",
          "header": [],
          "body": {
            "mode": "formdata",
            "formdata": [
              { "key": "email", "value": "ahmed@gmail.com", "type": "text" },
              { "key": "password", "value": "123456", "type": "text" }
            ]
          },
          "url": {
            "raw": "{{base_url}}/login",
            "host": ["{{base_url}}"],
            "path": ["login"]
          }
        },
        "response": [],
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
                "// Auto-save token to environment",
                "let json = pm.response.json();",
                "if (json.status && json.token) {",
                "    pm.environment.set('token', json.token);",
                "    console.log('✅ Token saved:', json.token.substring(0, 20) + '...');",
                "} else {",
                "    console.log('❌ Login failed:', json.message);",
                "}"
              ]
            }
          }
        ]
      },
      {
        "name": "Get Profile (Protected)",
        "request": {
          "method": "GET",
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}",
              "type": "text"
            }
          ],
          "url": {
            "raw": "{{base_url}}/profile",
            "host": ["{{base_url}}"],
            "path": ["profile"]
          }
        },
        "response": []
      },
      {
        "name": "Request OTP",
        "request": {
          "method": "POST",
          "header": [],
          "body": {
            "mode": "formdata",
            "formdata": [
              { "key": "email", "value": "ahmed@gmail.com", "type": "text" }
            ]
          },
          "url": {
            "raw": "{{base_url}}/request-otp",
            "host": ["{{base_url}}"],
            "path": ["request-otp"]
          }
        },
        "response": [],
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
                "// Auto-save OTP for testing (dev only)",
                "let json = pm.response.json();",
                "if (json.status && json.otp) {",
                "    pm.environment.set('otp', json.otp);",
                "    console.log('✅ OTP saved:', json.otp);",
                "}"
              ]
            }
          }
        ]
      },
      {
        "name": "Verify OTP",
        "request": {
          "method": "POST",
          "header": [],
          "body": {
            "mode": "formdata",
            "formdata": [
              { "key": "email", "value": "ahmed@gmail.com", "type": "text" },
              { "key": "otp", "value": "{{otp}}", "type": "text", "description": "Auto-filled from Request OTP response" }
            ]
          },
          "url": {
            "raw": "{{base_url}}/verify-otp",
            "host": ["{{base_url}}"],
            "path": ["verify-otp"]
          }
        },
        "response": []
      },
      {
        "name": "Change Password (Protected)",
        "request": {
          "method": "POST",
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}",
              "type": "text"
            }
          ],
          "body": {
            "mode": "formdata",
            "formdata": [
              { "key": "oldPassword", "value": "123456", "type": "text" },
              { "key": "newPassword", "value": "789123", "type": "text" }
            ]
          },
          "url": {
            "raw": "{{base_url}}/change-password",
            "host": ["{{base_url}}"],
            "path": ["change-password"]
          }
        },
        "response": []
      },
