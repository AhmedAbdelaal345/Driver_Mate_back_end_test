            "mode": "formdata",
            "formdata": [
              { "key": "email", "value": "ahmed@gmail.com", "type": "text" },
              { "key": "newPassword", "value": "newpass123", "type": "text" }
            ]
          },
          "url": {
            "raw": "{{base_url}}/reset-password",
            "host": ["{{base_url}}"],
